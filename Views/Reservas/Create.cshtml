@model Reserva
@{
    ViewData["Title"] = "Crear Reserva";

    // Si viene null, le asignamos un arreglo vacío
    var labs = ViewBag.Laboratorios as string[] ?? new string[0];
}

<h1>Crear Reserva</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="NombreProfesor" class="form-label"></label>
        <input asp-for="NombreProfesor" class="form-control" />
        <span asp-validation-for="NombreProfesor" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CorreoInstitucional" class="form-label"></label>
        <input asp-for="CorreoInstitucional" class="form-control" />
        <span asp-validation-for="CorreoInstitucional" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LaboratorioSeleccionado" class="form-label"></label>

        <select asp-for="LaboratorioSeleccionado" class="form-select">
            <option value="">Seleccione...</option>

            @foreach (var l in labs)
            {
                <option value="@l">@l</option>
            }
        </select>

        <span asp-validation-for="LaboratorioSeleccionado" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FechaReserva" class="form-label"></label>
        <input asp-for="FechaReserva" type="date" class="form-control" />
        <span asp-validation-for="FechaReserva" class="text-danger"></span>
    </div>

    <div class="row mb-3">
        <div class="col">
            <label asp-for="HoraInicio" class="form-label"></label>
            <input asp-for="HoraInicio" type="time" class="form-control" />
            <span asp-validation-for="HoraInicio" class="text-danger"></span>
        </div>

        <div class="col">
            <label asp-for="HoraFin" class="form-label"></label>
            <input asp-for="HoraFin" type="time" class="form-control" />
            <span asp-validation-for="HoraFin" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Motivo" class="form-label"></label>
        <textarea asp-for="Motivo" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Motivo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CodigoReserva" class="form-label"></label>
        <input asp-for="CodigoReserva" class="form-control" />
        <span asp-validation-for="CodigoReserva" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
